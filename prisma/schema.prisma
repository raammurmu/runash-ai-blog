generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id             String   @id @default(cuid())
  title          String
  slug           String   @unique
  excerpt        String
  content        String
  category       String
  gradient       String
  emoji          String
  image          String?
  authorName     String
  authorAvatar   String
  authorUsername String
  publishedAt    DateTime @default(now())
  readTime       String
  likes          Int      @default(0)
  comments       Int      @default(0)
  upvotes        Int      @default(0)
  tags           String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
